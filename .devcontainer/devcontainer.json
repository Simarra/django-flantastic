// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/debian-9-git
{
	"name": "Geodjango Debian",
	"dockerFile": "Dockerfile",
	// The optional 'runArgs' property can be used to specify additional runtime arguments.
	"runArgs": [
		// Uncomment the line if you will use a ptrace-based debugger like C++, Go, and Rust.
		// "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined",

		// Uncomment the next line to use a non-root user. See https://aka.ms/vscode-remote/containers/non-root-user.
		// "-u", "1000"
	],

	// Uncomment the next line if you want to publish any ports.
	"appPort": [8000],

	// Uncomment the next line to automatically install extensions.
	"extensions": [ "ms-python.python" ],

	// Uncomment the next line if you want to add in default container specific settings.json values
	// "settings":  { "workbench.colorTheme": "Quiet Light" },

	// Uncomment the next line to run commands after the container is created.
	"postCreateCommand": "poetry install",

	// Add the IDs of any extensions you want installed in the array below.
	"extensions": []
}